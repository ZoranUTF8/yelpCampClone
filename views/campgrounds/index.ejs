<% layout("layouts/boilerplate") %>

<div id="map"></div>

<h1>All campgrounds</h1>

<% for (let camp of all_campgrounds) {%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if(camp.images.length) {%>
            <img src="<%= camp.images[0].url%>" alt="camp image" class="img-fluid">
            <% } else { %>
            <img src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.newdesignfile.com%2Fpostpic%2F2015%2F02%2Fno-icon-available_68024.png&f=1&nofb=1"
                alt="no camp image" class="img-fluid">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <div class="card-title">
                    <%= camp.title %>
                    <p class="card-text"><%= camp.description %></p>
                    
                    <p class="card-text">
                        <p class="text-muted"><%= camp.location %></p>
                    </p>
                    <a href="/campgrounds/<%= camp.id %>" class="btn btn-primary">Details: <%= camp.title %> </a>
                </div>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
     // passing token to clusterMap.js
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
