<% layout("layouts/boilerplate") %>


<div class="row">
    <div class="col-8 offset-2">
        <div class="alert alert-danger" role="alert">
            <h3 class="alert-heading"> <%= err.message %> </h3>
            <h4>An error occured. How about you <a href="/campgrounds" class="alert-link">try going back.</a></h4>
            <hr>
            <% if (process.env.NODE_ENV !== "production") {%>
            <p><%= err.stack %> </p>
            <% } %>
            <hr>

        </div>
    </div>
</div>
